<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutEmpty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:visibility="gone">

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_stat_savings">

        <ImageView
            android:id="@+id/ivEmptyIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_receipt"
            app:tint="@color/status_savings"
            android:contentDescription="Empty"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tvEmptyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Transactions Yet"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        android:textStyle="bold"
        android:textColor="?attr/colorOnBackground"
        android:layout_marginTop="24dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvEmptyMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start tracking your income and expenses to see them here"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:paddingHorizontal="24dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEmptyAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Add Transaction"
        app:cornerRadius="12dp"
        app:icon="@android:drawable/ic_input_add"/>

</LinearLayout>
